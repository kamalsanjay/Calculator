{
    "name": "calculator/website",
    "description": "Professional calculator website with 300+ tools",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Calculator Team",
            "email": "dev@calculator.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "phpmailer/phpmailer": "^6.8",
        "phpoffice/phpspreadsheet": "^1.29",
        "tecnickcom/tcpdf": "^6.6",
        "endroid/qr-code": "^4.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Calculator\\": "core/",
            "Calculator\\Middleware\\": "middleware/"
        }
    },
    "scripts": {
        "test": "phpunit tests/",
        "analyze": "phpstan analyse core/ --level=5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}