# Application Environment
APP_ENV=development
APP_DEBUG=true
APP_NAME="Calculator Website"
APP_URL=http://localhost

# Database Configuration
DB_HOST=localhost
DB_NAME=calculator_db
DB_USER=root
DB_PASS=
DB_PORT=3306
DB_CHARSET=utf8mb4

# Security
APP_KEY=your-32-character-secret-key-here
ENCRYPTION_KEY=your-encryption-key-here
SESSION_SECRET=your-session-secret-key-here

# Email Configuration (SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@calculator.com
MAIL_FROM_NAME="Calculator Website"

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# Google AdSense
ADSENSE_CLIENT_ID=ca-pub-XXXXXXXXXXXXXXXX
ADSENSE_ENABLED=true

# API Keys
OPENEXCHANGE_API_KEY=your-api-key-here
WEATHER_API_KEY=your-api-key-here

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Session Configuration
SESSION_LIFETIME=7200
SESSION_COOKIE_NAME=calculator_session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true

# Cache Configuration
CACHE_ENABLED=true
CACHE_DRIVER=file
CACHE_TTL=3600

# Maintenance Mode
MAINTENANCE_MODE=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=/backup/database